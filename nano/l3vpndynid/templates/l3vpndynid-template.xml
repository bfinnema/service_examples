<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$DEVICE}</name>
      <config>
        <vrf xmlns="urn:ios">
          <definition>
            <name>vpn{$VPNID}</name>
            <rd>1:{$VPNID}</rd>
            <route-target>
              <export>
                <asn-ip>1:{$VPNID}</asn-ip>
              </export>
              <import>
                <asn-ip>1:{$VPNID}</asn-ip>
              </import>
            </route-target>
            <address-family>
              <ipv4/>
            </address-family>
          </definition>
        </vrf>
        <interface xmlns="urn:ios">
          <GigabitEthernet>
            <name>{$INTERFACE}</name>
            <vrf>
              <forwarding>vpn{$VPNID}</forwarding>
            </vrf>
            <ip>
              <address>
                <primary>
                  <address>{$PEIP}</address>
                  <mask>255.255.255.252</mask>
                </primary>
              </address>
            </ip>
          </GigabitEthernet>
        </interface>
        <router xmlns="urn:ios">
          <?if {$ROUTING-PROTOCOL='bgp'}?>
          <bgp>
            <as-no>1</as-no>
            <address-family>
              <with-vrf>
                <ipv4>
                  <af>unicast</af>
                  <vrf>
                    <name>vpn{$VPNID}</name>
                    <redistribute>
                      <connected/>
                      <static/>
                    </redistribute>
                    <neighbor>
                      <id>{$CEIP}</id>
                      <remote-as>65001</remote-as>
                    </neighbor>
                  </vrf>
                </ipv4>
              </with-vrf>
            </address-family>
          </bgp>
          <?end?>
          <?if {$ROUTING-PROTOCOL='rip'}?>
          <rip>
            <address-family>
              <ipv4>
                <vrf>
                  <name>vpn{$VPNID}</name>
                  <network>
                    <ip>{$CEIP}</ip>
                  </network>
                  <default-information>
                    <originate/>
                  </default-information>
                </vrf>
              </ipv4>
            </address-family>
          </rip>
          <?end?>
        </router>

        <vrf xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <vrf-list>
            <name>vpn{$VPNID}</name>
            <rd>1:{$VPNID}</rd>
            <address-family>
              <ipv4>
                <unicast>
                  <import>
                    <route-target>
                      <address-list>
                        <name>1:{$VPNID}</name>
                      </address-list>
                    </route-target>
                  </import>
                  <export>
                    <route-target>
                      <address-list>
                        <name>1:{$VPNID}</name>
                      </address-list>
                    </route-target>
                  </export>
                </unicast>
              </ipv4>
            </address-family>
          </vrf-list>
        </vrf>
        <interface xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <GigabitEthernet>
            <id>{$INTERFACE}</id>
            <vrf>vpn{$VPNID}</vrf>
            <ipv4>
              <address>
                <ip>{$PEIP}</ip>
                <mask>255.255.255.252</mask>
              </address>
            </ipv4>
          </GigabitEthernet>
        </interface>
        <route-policy xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <name>pass</name>
          <value>pass</value>
        </route-policy>
        <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <bgp>
            <bgp-no-instance>
              <id>1</id>
              <vrf>
                <name>vpn{$VPNID}</name>
                <rd>1:{$VPNID}</rd>
                <address-family>
                  <ipv4>
                    <unicast>
                      <redistribute>
                        <connected/>
                        <static/>
                      </redistribute>
                    </unicast>
                  </ipv4>
                </address-family>
                <neighbor>
                  <id>{$CEIP}</id>
                  <remote-as>65001</remote-as>
                  <address-family>
                    <ipv4>
                      <unicast>
                        <route-policy>
                          <direction>in</direction>
                          <name>pass</name>
                        </route-policy>
                        <route-policy>
                          <direction>out</direction>
                          <name>pass</name>
                        </route-policy>
                        <as-override/>
                        <default-originate/>
                      </unicast>
                    </ipv4>
                  </address-family>
                </neighbor>
              </vrf>
            </bgp-no-instance>
          </bgp>
        </router>
      </config>
    </device>
  </devices>
</config-template>
